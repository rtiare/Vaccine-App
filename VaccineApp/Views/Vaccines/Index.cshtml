@model List<Vaccine>

<div class="container">
    <div class="row justify-content-start">
        <div class="col-2 text-center">
            <p><a asp-controller="Vaccines" asp-action="AddVaccine" class="btn btn-primary">New Vaccine</a></p>
        </div>
        <div class="col-2 text-center">
            <p><a asp-controller="Vaccines" asp-action="AddDose" class="btn btn-primary">New Doses</a></p>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Vaccine</th>
            <th>Doses Required</th>
            <th>Days Between Doses</th>
            <th>Total Doses Received</th>
            <th>Total Doses Left</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vaccine in Model)
        {
            <tr>
                <td>@vaccine.VaccineName</td>
                <td>@vaccine.DoseRequired</td>
                <td>@vaccine.DaysBtwDose</td>
                <td>@vaccine.TotalDose</td>
                <td>@vaccine.DoseLeft</td>
                <td><a asp-controller="Vaccines" asp-action="Edit" asp-route-id="@vaccine.Id" class="btn btn-primary">Edit</a></td>
            </tr>
        }

    </tbody>
</table>
