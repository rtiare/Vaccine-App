<form method="post">
    <div class="form-group row">
        <label for="VaccineName" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="VaccineName" name="VaccineName">
        </div>
    </div>
    <div class="form-group row">
        <label for="DoseRequired" class="col-sm-2 col-form-label">Doses Required</label>
        <div class="col-sm-10">
            <select id="DoseRequired" class="form-control" name="DoseRequired">
                <option>1</option>
                <option selected>2</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label for="DaysBtwDose" class="col-sm-2 col-form-label">Days Between  Doses</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="DaysBtwDose" name="DaysBtwDose">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>